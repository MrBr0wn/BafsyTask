<div class="container">
  <h1>Страница регистрации пользователя </h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="mb-3">
      <%= f.label :last_name, class: "form-label" %>
      <%= f.text_field :last_name, autofocus: true, class: "form-control", required: true, placeholder: "Иванов" %>
    </div>

    <div class="mb-3">
      <%= f.label :first_name, class: "form-label" %>
      <%= f.text_field :first_name, class: "form-control", required: true, placeholder: "Иван" %>
    </div>

    <div class="mb-3">
      <%= f.label :patronymic, class: "form-label" %>
      <%= f.text_field :patronymic, class: "form-control", required: true, placeholder: "Иванович" %>
    </div>

    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autocomplete: "email", class: "form-control", required: true, placeholder: "name@example.com" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.submit "Регистрация", class: "btn btn-info" %>
    </div>
  <% end %>

  <div class="mb-3">
    <%= render "users/shared/links" %>
    <%= link_to "Home", root_path %>
  </div>

</div>